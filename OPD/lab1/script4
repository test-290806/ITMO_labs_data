#!/bin/sh

#----------------My Code------------------

#~~~~~~~~~~~~Фильтрация и поиск~~~~~~~~~~~
cd ~
#Подсчёт количества строк в файлах
#|& - для того чтобы передавать в grep не только вывод команды, но и ошибки
wc -l lab0/stoutland4/* 2>&1 | grep -v "Is a directory" | grep "total" > /tmp/s409642_file
echo ""
#Вывод файлов в алфафитном порядке a->z
#ls по умолчанию выводит файлы в алфафитном порядке
ls lab0/scraggy6/
echo ""
#Вывод содержимого файлов содержащего Si
cat lab0/scraggy6/* 2>/dev/null | grep "Si"
echo ""
#Вывести три первых элемента рекурсивного списка имен и атрибутов файлов в директории lab0, содержащих строку "le"
#Выводим от более старых файлов к более новым
ls -ltrR lab0/ | grep "le" | head -3
echo ""
#Вывести три последних элемента рекурсивного списка имен и атрибутов файлов в директории lab0
#Выводим от более новых к более старым
ls -ltR lab0/ 2>/dev/null | grep "o$" | tail -3
echo ""
#Вывести рекурсивно список имен файлов в директории scraggy6
ls -R lab0/scraggy6/
